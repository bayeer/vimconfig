" color scheme
colo darkblue
set background=dark
syntax enable
 
" encodings
set encoding=utf8
set termencoding=utf8
set fileencodings=utf8,cp1251
 
" tabs and spaces
set nowrap
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
 
set ai "auto indent
set si "smart indent
 
set number "show line numbers
set autoread
